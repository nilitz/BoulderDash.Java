package java.controller;

import contract.IModel;
import contract.IView;
import controller.Controller;
import org.junit.Test;

import java.io.IOException;
import java.sql.SQLException;

import static org.junit.Assert.assertEquals;

public class ControllerTest {


    private IModel model;
    private IView view;
    private Controller controller = new Controller(view, model);
    private int ID;

    /**
     * TEST | Test the method which change the level when the actual level is finished and when the Id is less than 5
     * @throws SQLException
     * throws sql related exception
     * @throws IOException
     * throws image related exception
     * @throws InterruptedException
     * throws thread related exception
     */
    @Test
    private void nextLevelLessThanFiveTest() throws IOException, SQLException, InterruptedException {
        ID = 2;
        model.setID(ID);

        //--------------- nextLevel method ---------------
        controller.nextLevel();
        //--------------- nextLevel method ---------------

        assertEquals(model.getID(), 3);
    }

    /**
     * TEST | Test the method which change the level when the actual level is finished and when the Id is 5
     * @throws SQLException
     * throws sql related exception
     * @throws IOException
     * throws image related exception
     * @throws InterruptedException
     * throws thread related exception
     */
    @Test
    private void nextLevelIsFiveTest() throws IOException, SQLException, InterruptedException {
        ID = 5;
        model.setID(ID);

        //--------------- nextLevel method ---------------
        controller.nextLevel();
        //--------------- nextLevel method ---------------

        assertEquals(model.getID(), 1);
    }
}
